                      <h5 class="card-title"> <%= blog.title.toUpperCase()%></h5>
                      <p class="card-text"> <%= blog.description%></p>
                      <a href="/blogs/<%=blog.id%>" class="btn btn-primary">See More</a>
                    </div>
                    <div class="card-footer text-muted">
                      Date Created: <%=blog.createdat %>
                    </div>
                  </div>
                <%})%>

        </div>
        
