<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body style="margin-top: 100px; height: auto; background-color: rgb(29, 13, 39);padding: 10px; color: white;">
    <div style="text-align: center;">
        <h1>
            <%= blog.title%>
        </h1>
        <h5>
            Created At : <%= blog.createdat%>
        </h5>
    </div>
    <div class="container mt-2" >


        <div class="mb-3">
            <label class="form-label">Title : </label>
            <input type="email" class="form-control" id="editTitle" placeholder="title" value="<%= blog.title%>">
        </div>
        <div class="mb-3">
            <label class="form-label">Description :</label>
            <textarea class="form-control" id="editTxt" rows="3"><%= blog.description%></textarea>
        </div>


        <div style="display: flex;">
            <button class="btn btn-success" id="save">Save</button>
            <button class="btn btn-danger mx-2">Cancel</button>
        </div>


    </div>

    <script>
        const save = document.getElementById("save")
        save.addEventListener("click", () => {
            console.log("i ran")
            const val1 = document.getElementById("editTitle").value
            const val2 = document.getElementById("editTxt").value
            axios.patch(`http://localhost:8080/blogs/<%=blog.id%>`, { title: `${val1}`, description: `${val2}` })
                .then(window.location.href = '/blogs')
                .catch(error => console.error('Error:', error));
        })

    </script>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</html>